<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="FDW\SnapScan\Api\Data\PaymentInterface" type="FDW\SnapScan\Model\Payment"/>
    <preference for="FDW\SnapScan\Api\Data\PaymentSearchResultInterface" type="Magento\Framework\Api\SearchResults" />
    <preference for="FDW\SnapScan\Api\PaymentRepositoryInterface" type="FDW\SnapScan\Model\PaymentRepository" />
    <virtualType name="SnapScanGatewayFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">FDW\SnapScan\Model\Ui\SnapScanConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Magento\Payment\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">SnapScanGatewayValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">SnapScanGatewayCommandPool</argument>
        </arguments>
    </virtualType>
    <virtualType name="SnapScanGatewayConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">FDW\SnapScan\Model\Ui\SnapScanConfigProvider::CODE</argument>
        </arguments>
    </virtualType>
    <type name="FDW\SnapScan\Model\Ui\SnapScanConfigProvider">
        <arguments>
            <argument name="config" xsi:type="object">SnapScanGatewayConfig</argument>
        </arguments>
    </type>
    <virtualType name="SnapScanGatewayValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">SnapScanGatewayConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="SnapScanGatewayConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">SnapScanGatewayConfig</argument>
        </arguments>
    </virtualType>
    <virtualType name="SnapScanGatewayCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="capture" xsi:type="string">SnapScanGatewayCaptureCommand</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="SnapScanGatewayCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">FDW\SnapScan\Gateway\Request\CaptureRequest</argument>
            <argument name="handler" xsi:type="object">FDW\SnapScan\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">FDW\SnapScan\Gateway\Http\CaptureTransferFactory</argument>
            <argument name="validator" xsi:type="object">FDW\SnapScan\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">SnapScanGateWayClient</argument>
        </arguments>
    </virtualType>
    <type name="FDW\SnapScan\Gateway\Http\CaptureTransferFactory">
        <arguments>
            <argument name="config" xsi:type="object">SnapScanGatewayConfig</argument>
        </arguments>
    </type>
    <virtualType name="SnapScanGateWayClient" type="FDW\SnapScan\Gateway\Http\Client\Zend">
        <arguments>
            <argument name="converter" xsi:type="object">FDW\SnapScan\Gateway\Http\Converter\JsonToArray</argument>
        </arguments>
    </virtualType>
</config>
